{{#ember-remodal
  forService=true
  closeOnOutsideClick=false
  onOpen=(action 'modalOpen')
  onClose=(action 'modalClose')
  closeOnEscape=false
  disableNativeClose=true
  name=modalName as |modal|}}
  {{yield}}
  {{#modal.open}}
    {{#yield-slot 'openModalElement'}}
      {{yield}}
    {{/yield-slot}}
  {{/modal.open}}

  {{#yield-slot 'header'}}
    {{yield}}
  {{else}}
    {{#if titleComponent}}
      {{component titleComponent}}
    {{else}}
      <div class="input-header">
        <div class="primary-title">{{title}}</div>
        {{#if subtitle}}
          <div class="sub-title">{{subtitle}}</div>
        {{/if}}
      </div>
    {{/if}}
  {{/yield-slot}}
  
  {{#perfect-scroll
    wheelSpeed=2
    minScrollbarLength=20
    maxScrollbarLength=150}}
    {{#yield-slot 'content'}}
      {{yield}}
    {{/yield-slot}}
  {{/perfect-scroll}}

  {{#yield-slot 'actions'}}
    <div class='actions'>
      {{yield (block-params (hash
        button=(component 'frost-button'
        size='medium'
        vertical=true)))}}
    </div>
  {{/yield-slot}}
{{/ember-remodal}}

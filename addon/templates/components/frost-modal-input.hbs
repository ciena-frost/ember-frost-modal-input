{{#ember-remodal
  buttonClasses='frost-button'
  forService=true
  openButton=openButton
  openButtonClasses=openButtonClasses
  closeOnOutsideClick=false
  closeOnEscape=false
  disableNativeClose=true
  name=modalName as |modal|}}
  {{#if titleComponent}}
    {{component titleComponent}}
  {{else}}
    <div class="input-header">
      <div class="primary-title">{{title}}</div>
      {{#if subtitle}}
        <div class="sub-title">{{subtitle}}</div>
      {{/if}}
    </div>
  {{/if}}
  {{yield}}
  {{#yield-slot 'form'}}
    {{#perfect-scroll
      wheelSpeed=2
      minScrollbarLength=20
      maxScrollbarLength=150}}
      {{yield}}
    {{/perfect-scroll}}
  {{/yield-slot}}

  {{#yield-slot 'actions'}}
    <div class='actions'>
      {{yield}}
    </div>
  {{/yield-slot}}
{{/ember-remodal}}

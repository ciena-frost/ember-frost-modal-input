{{#frost-modal-input
  isValid=isValid
  formValue=formValue
  title='Test title'
  subtitle='Subtitle'
  modalName=modalName
  onOpen=(action 'open')
  onClose=(action 'clearForm') as |slot|}}
  {{#block-slot slot 'target'}}
    {{frost-button
      text='Open small form'
      priority='secondary'
      size='medium'}}
  {{/block-slot}}
  {{#block-slot slot 'body' as |content|}}
    {{content.form
      autofocus=false
      bunsenModel=userModel
      inline=true
      value=formValue
      showAllErrors=showAllErrors
      }}
  {{/block-slot}}
  {{#block-slot slot 'footer' as |controls close|}}
    {{controls.button
      text='Custom'
      onClick=(action 'myCustomAction')}}
    {{controls.confirm
      onConfirm=(action 'save')
      text='Submit'
    }}
  {{/block-slot}}
{{/frost-modal-input}}
